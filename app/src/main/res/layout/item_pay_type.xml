<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg">

    <ImageView
        android:id="@+id/iv_type"
        android:layout_width="32dp"
        android:layout_height="33dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="46px"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="46px"
        android:src="@mipmap/pig" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="35px"
        android:layout_toRightOf="@+id/iv_type"
        android:text="余额"
        android:textColor="@color/text_pay_type"
        android:textSize="17sp" />

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30px"
        android:layout_toRightOf="@+id/tv_type"
        android:text="(共有1200分)"
        android:textColor="@color/textUnselectColor"
        android:textSize="13sp" />

    <RadioButton
        android:id="@+id/rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginRight="15dp"
        android:clickable="true"
        android:focusable="false" />

    <View
        style="@style/view_line_indentation"
        android:layout_below="@+id/iv_type" />
</RelativeLayout>