<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="63px"
            android:src="@mipmap/head_portrait_boy" />
        <LinearLayout
            android:layout_gravity="bottom"
            android:orientation="vertical"
            android:layout_marginLeft="44px"
            android:layout_marginTop="63px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:drawablePadding="5dp"
                android:text="赵茜茜"
                android:drawableRight="@mipmap/in_the_solution"
                android:id="@+id/tv_uName"
                android:textSize="16sp"
                android:textColor="@color/textSelectColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="40px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="昨天 12:20"
                    android:id="@+id/tv_time"
                    android:textColor="@color/textUnselectColor"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="79px"
                    android:text="小二语文"
                    android:id="@+id/tv_subject"
                    android:textColor="@color/textUnselectColor"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:drawableLeft="@mipmap/address"
                    android:drawablePadding="12px"
                    android:layout_marginLeft="79px"
                    android:text="北京市朝阳区"
                    android:id="@+id/tv_address"
                    android:textColor="@color/textUnselectColor"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="66px"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:lineSpacingExtra="3dp"
            android:text="这不仅仅是一篇经验这不仅仅是一篇经验这不仅仅是一篇经验这不仅仅是一篇经验这不仅仅是一篇经验这不仅仅是一篇经验"
            android:textColor="@color/text_describe"
            android:textSize="14sp"
            android:id="@+id/tv_describe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginLeft="15dp"
        android:id="@+id/ecy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>