<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="260px"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:id="@+id/iv_head"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/head_portrait_girl" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_toRightOf="@+id/iv_head"
            android:layout_toLeftOf="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="44px"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_uName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="何星"
                android:textColor="@color/textSelectColor"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25px"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_msg_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="评论了你的问题"
                    android:textColor="@color/text_describe"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:layout_marginTop="40px"
            android:layout_marginRight="15dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:text="昨天 12:20"
            android:id="@+id/tv_time"
            android:textColor="@color/textUnselectColor"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        style="@style/view_line_indentation"
        android:layout_alignParentBottom="true" />
</RelativeLayout>