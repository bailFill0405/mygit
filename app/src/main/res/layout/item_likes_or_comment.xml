<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginLeft="125px"
        android:layout_marginRight="125px"
        android:orientation="horizontal"
        android:layout_marginTop="54px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_alignParentLeft="true"
            android:id="@+id/tv_collection"
            android:drawablePadding="12px"
            android:text="30"
            android:drawableLeft="@mipmap/collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/tv_comment"
            android:drawablePadding="12px"
            android:text="40"
            android:drawableLeft="@mipmap/comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/tv_likes"
            android:drawablePadding="12px"
            android:text="10"
            android:drawableLeft="@mipmap/likes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>